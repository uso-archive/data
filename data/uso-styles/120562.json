  "css": "@namespace url(http://www.w3.org/1999/xhtml);\r\n\r\n@-moz-document domain(\"www.messenger.com\") {\r\n/*Source can be found at https://github.com/ekohilas/messenger-hover */\r\n\r\n/*no idea*/\r\n._2ogr::before {\r\n    content: none\r\n}\r\n._1enh:hover ._2ogr::before {\r\n    content: ''\r\n}\r\n\r\n/*unread color*/\r\n._1ht3._1ht1 {\r\n    background-color: rgba(0, 132, 255, .2);\r\n    -webkit-transition: background-color .5s\r\n}\r\n/*non icon stuff*/\r\n._1ht5 ._1qt4 {\r\n    display: none !important;\r\n}\r\n._1enh:hover ._1ht5 ._1qt4 {\r\n    display: flex !important;\r\n}\r\n.safari.webkit ._1enh:hover ._1ht5 ._1qt4 {\r\n    display: -webkit-flex !important;\r\n}\r\n\r\n/*side bar size change*/\r\n._1enh {\r\n    flex-basis: 74px;\r\n    min-width: 74px;\r\n    transition: flex-basis 0.1s, min-width 0.1s;\r\n}\r\n.safari.webkit ._1enh {\r\n    -webkit-flex-basis: 74px;\r\n    -webkit-transition: -webkit-flex-basis 0.1s, min-width 0.1s;\r\n}\r\n  \r\n/*[[size]]*/\r\n\r\n/*hide 'messenger' text*/\r\n._36ic ._1tqi {\r\n    display: none\r\n}\r\n._1enh:hover ._36ic ._1tqi{\r\n    display: inline-block;\r\n}\r\n\r\n/*messenger header centering*/\r\n._36ic {\r\n    justify-content: center\r\n}\r\n.safari.webkit ._36ic {\r\n    -webkit-justify-content: center\r\n}\r\n._1enh:hover ._36ic {\r\n    justify-content: space-between\r\n}\r\n._1enh:hover .safari.webkit ._36ic {\r\n    -webkit-justify-content: space-between\r\n}\r\n\r\n/*new message tab*/\r\n._4wzs {\r\n    overflow-x: hidden;\r\n}\r\n._1bqr {\r\n    display: none\r\n}\r\n._1enh:hover ._1bqr {\r\n    display: inline-block;\r\n}\r\n\r\n/*option gear*/\r\n._4kzu {\r\n    display: none\r\n}\r\n._1enh:hover ._4kzu {\r\n    display: inline-block\r\n}\r\n\r\n/*[[icon]]*/\r\n  \r\n/*[[search]]*/\r\n  \r\n}",
