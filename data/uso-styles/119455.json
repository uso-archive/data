  "css": "@-moz-document domain(\"twitch.tv\") {\r\n/* \r\n * Name:    Twitch – Custom colors video player\r\n * Title:   Change the color of Twitch HTML5 player buttons, when your cursor is hovering the buttons.\r\n * Author:  Crystallis\r\n * Version: 0.2\r\n *\r\n */\r\n\r\n.player-loading-spinner {\r\nborder-left: .3em solid /*[[color]]*/ ! important;\r\n}\r\n.player-button:hover:enabled svg {\r\nfill: /*[[color]]*/ ! important;\r\n}\r\n.player-livestatus__online:before {\r\nbackground: /*[[color]]*/ ! important;\r\n}\r\n.player-video-issue__submit {\r\nbackground: /*[[color]]*/ ! important;\r\n}\r\n.player-slider .ui-slider-range {\r\nbackground: /*[[color]]*/ ! important;\r\n}\r\n\r\n\r\n.player-button:hover .player-tip {\r\ndisplay: /*[[tool]]*/ ! important;\r\n}\r\n}",
