  "style": {
    "css": "@-moz-document url-prefix(\"https://www.youtube.com/\") {\r\n/* Remove Shadow on YouTube Video Player Bar*/\r\n#movie_player > div.ytp-gradient-bottom {opacity: /*[[GBOTTOM]]*/ !important;}\r\n#movie_player > div.ytp-gradient-top {opacity: /*[[GTOP]]*/ !important;}\r\n/*set opacity between 0 and 1 to set how visible the gradients are*/\r\n}",
