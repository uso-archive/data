  "style": {
    "css": "@media screen{\r\n@-moz-document url-prefix(\"https://www.youtube.com/watch\") {\r\n.ytd-comments:not(:hover),\r\n\r\n#watch-appbar-playlist:not(:hover),\r\n#watch-discussion:not(:hover),\r\n#footer:not(:hover),\r\n#footer-container:not(:hover){\r\n-webkit-filter:opacity(/*[[M]]*/)\r\n}\r\nytd-video-primary-info-renderer:not(:hover),\r\nytd-video-secondary-info-renderer:not(:hover),\r\n#action-panel-details:not(:hover){\r\n-webkit-filter:opacity(/*[[D]]*/)\r\n}\r\n#related:not(:hover),\r\n.watch-sidebar-gutter:not(:hover){\r\n-webkit-filter:opacity(/*[[R]]*/)grayscale(/*[[G]]*/)\r\n}\r\nytd-compact-video-renderer:not(:hover),\r\n.related-list-item:not(:hover){\r\n-webkit-filter:opacity(70%)\r\n}\r\n.ytp-settings-button svg path{\r\nfill:red\r\n}\r\n}\r\n}",
