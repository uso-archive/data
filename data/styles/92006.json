  "style": {
    "css": "@namespace url(http://www.w3.org/1999/xhtml);\r\n\r\n@-moz-document domain(\"8tracks.com\") {\r\n\r\nbody, input { font-family: /*[[mainfont]]*/ !important; }\r\n\r\nh1 { font-family: /*[[headerfont]]*/ !important; }\r\n\r\n.title_artist { font-size: 22px !important;}\r\n#now_playing .title_artist { font-size: 14px !important;}\r\n.user_about .propername { font-size: 20px !important;}\r\n\r\n}",
