  "style": {
    "css": "@-moz-document url-prefix(\"http://gtaforums.com\") {\r\n/* version 1.02 */\r\n\r\n/*[[noads]]*/\r\n\r\n/*[[nofields]]*/\r\n\r\n/*[[fastreplyfont]]*/\r\n\r\n/*[[nosigs]]*/\r\n\r\n/*[[nofastreplyav]]*/\r\n\r\n/*[[nodesc]]*/\r\n\r\n/*[[dockbar]]*/\r\n\r\n/*[[shrinkhead]]*/\r\n\r\n/*[[nologged]]*/\r\n\r\n/*[[noavbg]]*/\r\n\r\n/*[[bganim]]*/\r\n\r\n/*[[norep]]*/\r\n\r\n/*[[fixoverflow]]*/\r\n}",
    "settings": [
      {
        "key": "noads",
        "label": "Ads removal",
        "type": "dropdown",
        "options": [
          {
            "key": "noadsYes",
            "label": "Yes",
            "value": "/* Get rid of ads */\r\n#gtaf_rightColumn, .adsbygoogle, div[style*=\"right: 6px\"], div[style=\"margin:4px 0 7px 0; text-align:center\"], #topLeaderboardAd, #bottomLeaderboardAd, #gtaf_largeRectangeAd, *[id*=gtaf_ad] {\r\n\tdisplay: none !important;\r\n}\r\n.col_f_post, .col_c_post, .col_f_mod {\r\n\tpadding-right: 5px !important;\r\n}",
            "default": false
          },
          {
            "key": "noadsNo",
            "label": "No",
            "value": "",
            "default": true
          }
        ]
      },
      {
        "key": "nofields",
        "label": "Remove unnecessary fields under avatar",
        "type": "dropdown",
        "options": [
          {
            "key": "nofieldsYes",
            "label": "Yes",
            "value": "/* Remove unnecessary fields under avatar */\r\np.member_title, li.group_icon, li.group_icon + li.group_title, li.group_title + li.group_title, ul.custom_fields  {\r\n\tdisplay: none;\r\n}\r\nli.group_title {\r\n\tposition: relative;\r\n\ttop: -5px;\r\n}",
            "default": false
          },
          {
            "key": "nofieldsYesb",
            "label": "Yes, but leave group icon",
            "value": "/* Remove unnecessary fields under avatar */\r\np.member_title, li.group_icon + li.group_title, li.group_title + li.group_title, ul.custom_fields  {\r\n\tdisplay: none;\r\n}\r\nli.group_title {\r\n\tposition: relative;\r\n\ttop: -5px;\r\n}",
            "default": false
          },
          {
            "key": "nofieldsNo",
            "label": "No",
            "value": "",
            "default": true
          }
        ]
      },
      {
        "key": "fastreplyfont",
        "label": "Custom Fast Reply font",
        "type": "dropdown",
        "options": [
          {
            "key": "fastreplyfontYes",
            "label": "Yes",
            "value": "/* Custom Fast Reply font */\r\n.cke_skin_ips textarea.cke_source { \r\n\tfont-family: \"Consolas\", monospace;\r\n\tfont-size: 12px;\r\n\tcolor: #000000;\r\n}",
            "default": false
          },
          {
            "key": "fastreplyfontNo",
            "label": "No",
            "value": "",
            "default": true
          }
        ]
      },
      {
        "key": "nosigs",
        "label": "Remove signatures",
        "type": "dropdown",
        "options": [
          {
            "key": "nosigsYes",
            "label": "Yes",
            "value": "/* Remove signatures */\r\ndiv.signature, div.signature_outer {\r\n\tdisplay: none !important;\r\n}",
            "default": false
          },
          {
            "key": "nosigsNo",
            "label": "No",
            "value": "",
            "default": true
          }
        ]
      },
      {
        "key": "nofastreplyav",
