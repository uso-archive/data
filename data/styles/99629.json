        "type": "dropdown",
        "options": [
          {
            "key": "nofastreplyavYes",
            "label": "Yes",
            "value": "/* Remove avatar from Fast Reply */\r\n#fast_reply_wrapper > div.ipsBox_container > a {\r\n\tdisplay: none !important;\r\n}\r\n#fast_reply_wrapper > div.ipsBox_container > div.ipsBox_withphoto {\r\n\tmargin-left: 0 !important;\r\n}",
