    "css": "@-moz-document url('chrome://browser/content/browser.xul') {\r\n\r\n/*Rounded corners for tab*/\r\ntab { -moz-border-radius: /*[[rad]]*/ !important; }\r\n\r\n/*Glossy look for bottom bar and tab*/\r\n#TabsToolbar, tab { \r\n/*[[tabcol]]*/\r\n\r\n/*[[glassy]]*/\r\n}\r\n\r\n/*Background area behind the tabs*/\r\n.tabbrowser-tabs { /*[[tabback]]*/ }\r\n\r\n\r\n/*Tab text color/font*/\r\n.tab-text {\r\n/*[[tabtext]]*/\r\nfont-weight: normal !important;\r\nfont-family: Verdana !important;}\r\n\r\n/* Background for toolbars */\r\n.chromeclass-toolbar, .chromeclass-directories, .chromeclass-menubar, #navigator-toolbox\r\n{  /*[[toolback]]*/\r\n   background-image: none !important; \r\n   /*[[glassy]]*/ }\r\n\r\n\r\n/*[[tooltext]]*/\r\n\r\n\r\n/* Text color for Statusbar */\r\n.toolbarbutton-text, #browser-bottombox\r\n\t{ /*[[statusbar]]*/ }\r\n\r\n/* Background color for Statusbar */\r\n#browser-bottombox, #addon-bar, #downbarHolder, #FindToolbar\r\n{  -moz-appearance: none !important; \r\n   /*[[statback]]*/\r\n   background-image: none !important; \r\n   /*[[glassy]]*/ }\r\n\r\n\r\n}",
